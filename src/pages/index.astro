  <!-- Hero Section -->
  <section class="relative w-full bg-white dark:bg-zinc-950 py-16 md:py-24 lg:py-32">
    <div class="container px-4 mx-auto text-center">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-semibold tracking-tight text-zinc-900 dark:text-white mb-4">
        aksi<span class="text-zinc-600 dark:text-zinc-400">.dev</span>
      </h1>
      <p class="text-xl md:text-2xl lg:text-3xl text-zinc-600 dark:text-zinc-400 mb-8 max-w-3xl mx-auto">
        Freelance Developer • Creating Digital Excellence
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="#projects"
          class="text-blue-600 dark:text-blue-400 hover:underline text-lg font-medium transition-colors"
        >
          View Projects →
        </a>
        <a
          href="#contact"
          class="text-blue-600 dark:text-blue-400 hover:underline text-lg font-medium transition-colors"
        >
          Get in touch →
        </a>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="relative w-full bg-zinc-50 dark:bg-zinc-900 py-16 md:py-24 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight text-zinc-900 dark:text-white mb-4">
          Featured Projects
        </h2>
        <p class="text-lg md:text-xl text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto">
          A showcase of my recent work as a freelance developer
        </p>
      </div>

      <!-- Slider Container -->
      <div class="relative">
        <!-- Projects Slider -->
        <div id="projectsSlider" class="flex gap-6 transition-transform duration-500">
          <!-- Project 1 -->
          <div class="project-slide min-w-full md:min-w-[calc(50%-12px)] lg:min-w-[calc(33.333%-16px)]">
            <div class="bg-white dark:bg-zinc-800 rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
              <div class="aspect-video bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                <span class="text-white text-4xl font-bold">E-Commerce</span>
              </div>
              <div class="p-6">
                <h3 class="text-2xl font-semibold text-zinc-900 dark:text-white mb-2">
                  Modern E-Commerce Platform
                </h3>
                <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                  Full-stack e-commerce solution with payment integration, inventory management, and admin dashboard.
                </p>
                <div class="flex flex-wrap gap-2 mb-4">
