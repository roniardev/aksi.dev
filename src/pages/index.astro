---
import { buttonVariants } from "@/components/ui/button";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="Akselerasi"
  description="Accelerate your digital presence with cutting-edge solutions"
>
  <!-- Hero Section -->
  <section class="relative w-full bg-white dark:bg-zinc-950 py-16 md:py-24 lg:py-32">
    <div class="container px-4 mx-auto text-center">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-semibold tracking-tight text-black dark:text-white mb-4">
        aksi<span class="text-zinc-600 dark:text-zinc-400">.dev</span>
      </h1>
      <p class="text-xl md:text-2xl lg:text-3xl text-zinc-600 dark:text-zinc-400 mb-8 max-w-3xl mx-auto">
        Build faster. Ship better. Scale infinitely.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="#learn-more"
          class="text-blue-600 dark:text-blue-500 hover:underline text-lg font-medium transition-all"
        >
          Learn more →
        </a>
        <a
          href="#get-started"
          class="text-blue-600 dark:text-blue-500 hover:underline text-lg font-medium transition-all"
        >
          Get started →
        </a>
      </div>
    </div>
  </section>

  <!-- Feature Section 1 -->
  <section class="relative w-full bg-zinc-50 dark:bg-zinc-900 py-16 md:py-24">
    <div class="container px-4 mx-auto text-center">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight text-black dark:text-white mb-4">
        Lightning fast performance
      </h2>
      <p class="text-lg md:text-xl text-zinc-600 dark:text-zinc-400 mb-6 max-w-2xl mx-auto">
        Optimized for speed and efficiency. Experience unparalleled performance across all devices.
      </p>
      <div class="mt-8 flex justify-center gap-6">
        <a
          href="#"
          class="text-blue-600 dark:text-blue-500 hover:underline text-lg font-medium transition-all"
        >
          Learn more →
        </a>
      </div>
    </div>
  </section>

  <!-- Feature Section 2 -->
  <section class="relative w-full bg-black dark:bg-zinc-950 py-16 md:py-24">
    <div class="container px-4 mx-auto text-center">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight text-white mb-4">
        Built for developers
      </h2>
      <p class="text-lg md:text-xl text-zinc-400 mb-6 max-w-2xl mx-auto">
        Modern tools and frameworks. Write less code, build more features.
      </p>
      <div class="mt-8 flex justify-center gap-6">
        <a
          href="#"
          class="text-blue-500 hover:underline text-lg font-medium transition-all"
        >
          Explore features →
        </a>
      </div>
    </div>
  </section>

  <!-- Feature Section 3 -->
  <section class="relative w-full bg-white dark:bg-zinc-900 py-16 md:py-24">
    <div class="container px-4 mx-auto text-center">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight text-black dark:text-white mb-4">
        Scale with confidence
      </h2>
      <p class="text-lg md:text-xl text-zinc-600 dark:text-zinc-400 mb-6 max-w-2xl mx-auto">
        From startup to enterprise. Infrastructure that grows with your needs.
      </p>
      <div class="mt-8 flex justify-center gap-6">
        <a
          href="#"
          class="text-blue-600 dark:text-blue-500 hover:underline text-lg font-medium transition-all"
        >
          Learn more →
        </a>
        <a
          href="#"
          class="text-blue-600 dark:text-blue-500 hover:underline text-lg font-medium transition-all"
        >
          View pricing →
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative w-full bg-zinc-50 dark:bg-zinc-950 py-16 md:py-20">
    <div class="container px-4 mx-auto text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-semibold tracking-tight text-black dark:text-white mb-6">
        Ready to get started?
      </h2>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="#"
          class={buttonVariants({ variant: "default", size: "lg" }) + " text-base"}
        >
          Start free trial
        </a>
        <a
          href="#"
          class={buttonVariants({ variant: "outline", size: "lg" }) + " text-base"}
        >
          Contact sales
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
