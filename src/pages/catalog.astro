---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";

const catalogItems = [
  {
    id: 1,
    title: "Premium Business Cards",
    category: "Print Materials",
    image: "https://images.unsplash.com/photo-1589939705384-5185137a7f0f?w=400&h=300&fit=crop",
    description: "High-quality business cards with various finishes"
  },
  {
    id: 2,
    title: "Custom Banners",
    category: "Large Format",
    image: "https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=400&h=300&fit=crop",
    description: "Eye-catching banners for events and promotions"
  },
  {
    id: 3,
    title: "Brochure Printing",
    category: "Marketing",
    image: "https://images.unsplash.com/photo-1586281380349-632531db7ed4?w=400&h=300&fit=crop",
    description: "Professional brochures to showcase your business"
  },
  {
    id: 4,
    title: "Signage Solutions",
    category: "Signage",
    image: "https://images.unsplash.com/photo-1508615263227-e1e8b88136d4?w=400&h=300&fit=crop",
    description: "Custom signs for indoor and outdoor use"
  },
  {
    id: 5,
    title: "Vehicle Graphics",
    category: "Large Format",
    image: "https://images.unsplash.com/photo-1449965408869-eaa3f722e40d?w=400&h=300&fit=crop",
    description: "Turn your vehicle into a mobile advertisement"
  },
  {
    id: 6,
    title: "Flyer & Postcard",
    category: "Print Materials",
    image: "https://images.unsplash.com/photo-1561070791-2526d30994b5?w=400&h=300&fit=crop",
    description: "Effective marketing materials for your campaigns"
  },
  {
    id: 7,
    title: "Trade Show Displays",
    category: "Events",
    image: "https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=400&h=300&fit=crop",
    description: "Stand out at trade shows with custom displays"
  },
  {
    id: 8,
    title: "Promotional Products",
    category: "Marketing",
    image: "https://images.unsplash.com/photo-1513885535751-8b9238bd345a?w=400&h=300&fit=crop",
    description: "Branded merchandise to promote your business"
  },
  {
    id: 9,
    title: "Window Graphics",
    category: "Signage",
    image: "https://images.unsplash.com/photo-1497366216548-37526070297c?w=400&h=300&fit=crop",
    description: "Transform windows into marketing opportunities"
  }
];

const categories = ["All", "Print Materials", "Large Format", "Marketing", "Signage", "Events"];
---

<BaseLayout
  title="Catalog - Akselerasi"
  description="Browse our comprehensive catalog of printing and graphics services"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-gray-50 to-white py-16 md:py-24">
    <div class="container px-4 mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Our Catalog
      </h1>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto mb-8">
        Explore our wide range of professional printing and graphics solutions
      </p>
    </div>
  </section>

  <!-- Filter Section -->
  <section class="border-b bg-white sticky top-[73px] z-40">
    <div class="container px-4 mx-auto py-6">
      <div class="flex flex-wrap gap-3 justify-center">
        {categories.map((category) => (
          <button
            class="px-4 py-2 text-sm font-medium rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 hover:border-gray-400 transition-all"
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Catalog Grid -->
  <section class="py-12 md:py-16 bg-white">
    <div class="container px-4 mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {catalogItems.map((item) => (
          <div class="group bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-all duration-300">
            <div class="aspect-[4/3] overflow-hidden bg-gray-100">
              <img
                src={item.image}
                alt={item.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <span class="inline-block px-3 py-1 text-xs font-medium text-blue-600 bg-blue-50 rounded-full mb-3">
                {item.category}
              </span>
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                {item.title}
              </h3>
              <p class="text-gray-600 text-sm mb-4">
                {item.description}
              </p>
              <a
                href={`/products/${item.id}`}
                class={buttonVariants({ variant: "default", className: "w-full" })}
              >
                View Details
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gray-900 text-white">
    <div class="container px-4 mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Need a Custom Solution?
      </h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto mb-8">
        Our team is ready to help you create the perfect design for your needs
      </p>
      <a
        href="/contact"
        class={buttonVariants({ variant: "secondary", size: "lg" })}
      >
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>
